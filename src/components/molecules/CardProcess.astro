---
const { data } = Astro.props;
---

<li class="border-t-border-primary border-t @container">
  <article class="mt-4">
    <footer class="@lg:flex @2xl:flex-row gap-4 items-start">
      <p class="text-text-secondary text-body-small @md:w-2.5 @lg:w-20 @xs:pb-2">{data.step}</p>
      <h3 class="heading-small text-text-primary min-w-[189px] @lg:w-[363px] @xs:pb-4">{data.heading}</h3>
      <p class="text-text-secondary text-body-small min-w-[200px] @lg:w-[484px]">{data.description}</p>
    </footer>
  </article>
</li>
